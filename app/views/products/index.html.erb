<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://wx.mlcdn.com.br/ponzi/production/portaldalu/61333.jpg);">
  <div class="container">
    <h1>Discover the best deals in sports </h1>
    <p>New and used</p>
  </div>
</div>


<div class="container-fluid">
  <div class="row row-cols-1 row-cols-md-4 justify-content-center">
    <% @products.each do |product| %>
      <div class="col mb-4">
        <%= link_to product_path(product) do %>
          <div class="card h-100">
            <% if product.photo.attached? %>
              <%= cl_image_tag product.photo.key, crop: :fill, class: "card-img-top" %>
            <% end %>
            <div class="card-body">
              <h1><%= product.name %></h1>
              <h3><%= product.price %></h3>
            </div>
            <%# <div class="card-footer">
              <small class="text-muted">Last updated 3 mins ago</small>
            </div> %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
